# original file address: /etc/i3status.conf
# copy original file to ~/.config/i3status/config
# edit the copied config file
#
# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	color_good = "#a3be8c"
        color_degraded = "#ebcb8b"
        color_bad = "#bf616a"
}

order += "wireless _first_"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

battery all {
        format = "%status %percentage"
	threshold_type = percentage
	low_threshold = 25
}

disk "/" {
        format = "Disk %percentage_used"
}

wireless _first_ {
  format_up = "WF: (%quality at %essid) %ip"
  format_down  = "WLS: down"
}

cpu_usage {
  format = "CPU: %usage"
  degraded_threshold = 75
  max_threshold = 90
}

memory {
        format = "MEM %used/%available"
        threshold_degraded = "3G"
        threshold_critical = "1G"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}


